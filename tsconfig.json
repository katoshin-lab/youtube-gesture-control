{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "jsx": "react",
    "lib": [
      "esnext",
      "DOM",
      "ESNext"
    ],
    "baseUrl": "./src",
    "outDir": "./lib-ts",
    "declaration": true,
    "sourceMap": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": false,
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules",
    "lib"
  ],
  "typedocOptions": {
    "name": "test_npm",
    "mode": "file",
    "out": "./docs"
  }
}
